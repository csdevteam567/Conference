@model Conference.Models.User

@{
    ViewBag.Title= "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Registered", "Registration", FormMethod.Post))
{
    <table>
        <tr>
            <td><p>Введите полное имя : </p></td>
            <td><input type="text" name="Name" /> </td>
        </tr>
        <tr>
            <td><p>Возраст :</p></td>
            <td><input type="text" name="Age" /> </td>
        </tr>
        <tr>
            <td><p>Областной центр :</p></td>
            <td>
                @Html.DropDownList("StateCapital")
            </td>
        </tr>
        <tr>
            <td><p>Электронная почта :</p></td>
            <td><input type="email" name="Email" /> </td>
        </tr>
        <tr>
            <td><p>Номер телефона :</p></td>
            <td><input type="text" name="Phone" /> </td>
        </tr>
        <tr>
            <td><p>Пароль :</p></td>
            <td><input type="password" name="Password" /> </td>
        </tr>
        <tr>
            <td><input type="submit" value="Регистрация" /> </td>
            <td></td>
        </tr>
    </table>
}

@{
    <h3>@ViewData["Message"]</h3>
}
